<GuiXml>
    <Font name="MyFontGame16" font="$(MEDIUM_FONT)|$(KB_16)|soft-shadow-thin" />
    <Font name="MyFontGame20" font="$(BOLD_FONT)|$(KB_20)|soft-shadow-thik" />
    <Controls>
		<!-- Virtual labels -->
        <Label name="FCOGLRowLabel" font="MyFontGame16" wrapMode="ELLIPSIS" horizontalAlignment="LEFT" verticalAlignment="CENTER" virtual="true" >
		</Label>
		<Label name="FCOGLSearchLabel" font="ZoFontGameLargeBold" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" virtual="true" />
        <!--Sort headers -->
        <Control name="FCOGLSortHeader" inherits="ZO_SortHeaderBehavior" virtual="true">
            <Controls>
                <Label name="$(parent)Name" font="MyFontGame20" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL"  horizontalAlignment="CENTER" verticalAlignment="CENTER" wrapMode="ELLIPSIS">
                        <AnchorFill />
                </Label>
            </Controls>
        </Control>
        <!-- Virtual Rows -->
		<Control name="FCOGLRowGuildSales" mouseEnabled="true" virtual="true">
			<Dimensions y="30" />
			<OnMouseEnter>
				FCOGL_UI_OnMouseEnter(self)
			</OnMouseEnter>
			<OnMouseExit>
				FCOGL_UI_OnMouseExit(self)
			</OnMouseExit>
            <OnMouseUp>
				FCOGL_UI_OnMouseUp(self, button, upInside)
			</OnMouseUp>
			<Controls>
				<Texture name="$(parent)BG" inherits="ZO_ThinListBgStrip" />
                <Label name="$(parent)Rank" inherits="FCOGLRowLabel">
                    <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$(parent)" />
                    <Dimensions x="50" y="30" />
                </Label>
                <!--
				<Label name="$(parent)DateTime" inherits="FCOGLRowLabel">
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)Rank" />
                    <Dimensions x="135" y="30" />
                </Label>
                -->
				<Label name="$(parent)Name" inherits="FCOGLRowLabel">
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)Rank" />
					<Dimensions x="200" y="30" />
				</Label>
				<!--
				<Label name="$(parent)Item" inherits="FCOGLRowLabel">
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)Name" />
					<Dimensions x="100" y="30" />
				</Label>
				-->
				<Label name="$(parent)Price" inherits="FCOGLRowLabel">
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)Name" />
					<Dimensions x="80" y="30" />
				</Label>
				<Label name="$(parent)Tax" inherits="FCOGLRowLabel">
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)Price" />
					<Dimensions x="80" y="30" />
				</Label>
				<Label name="$(parent)Amount" inherits="FCOGLRowLabel">
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)Tax" />
					<Dimensions x="150" y="30" />
				</Label>
                <Label name="$(parent)Info" inherits="FCOGLRowLabel">
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)Amount" />
                    <Dimensions x="100" y="30" />
					<Anchor point="RIGHT" relativePoint="RIGHT" relativeTo="$(parent)" offsetX="-16" />
                </Label>
			</Controls>
		</Control>

		<Control name="FCOGLRowDiceHistory" mouseEnabled="true" virtual="true">
			<Dimensions y="30" />
			<OnMouseEnter>
				FCOGL_UI_OnMouseEnter(self)
			</OnMouseEnter>
			<OnMouseExit>
				FCOGL_UI_OnMouseExit(self)
			</OnMouseExit>
            <OnMouseUp>
				FCOGL_UI_OnMouseUp(self, button, upInside)
			</OnMouseUp>
			<Controls>
				<Texture name="$(parent)BG" inherits="ZO_ThinListBgStrip" />
                <Label name="$(parent)No" inherits="FCOGLRowLabel">
                    <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$(parent)" />
                    <Dimensions x="30" y="30" />
                </Label>
				<Label name="$(parent)DateTime" inherits="FCOGLRowLabel">
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)No" />
                    <Dimensions x="135" y="30" />
                </Label>
				<Label name="$(parent)Name" inherits="FCOGLRowLabel">
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)DateTime" />
					<Dimensions x="200" y="30" />
				</Label>
				<Label name="$(parent)Roll" inherits="FCOGLRowLabel">
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)Name" />
					<Dimensions x="80" y="30" />
					<Anchor point="RIGHT" relativePoint="RIGHT" relativeTo="$(parent)" offsetX="-16" />
				</Label>
			</Controls>
		</Control>

		<!--Virtual backdrops - The background of the UI -->
		<Backdrop name="FCOGL_WindowsBackdrop" inherits="ZO_DarkThinFrame" virtual="true">
			<Anchor point="TOPLEFT" offsetX="-4" offsetY="-4"/>
            <Anchor point="BOTTOMRIGHT" offsetX="4" offsetY="4"/>
            <Edge file="EsoUI/Art/Miscellaneous/dark_edgeFrame_8_thin.dds" edgeFileWidth="64" edgeFileHeight="8" />
            <Center file="EsoUI/Art/Miscellaneous/Gamepad/gp_edgeFill.dds" />
			<!--<Center file="/esoui/art/upsell/upsell_greymoor_bg.dds" /> -->
        </Backdrop>

		<!-- Virtual edit boxes -->
		<EditBox name="FCOGLEditForBackdrop" inherits="ZO_DefaultEdit" virtual="true">
            <Anchor point="TOPLEFT" offsetX="2" offsetY="2"/>
            <Anchor point="BOTTOMRIGHT" offsetX="-2" offsetY="-2"/>
        </EditBox>
		<EditBox name="FCOGLEditDefaultText" virtual="true">
            <OnTextChanged>
                ZO_EditDefaultText_OnTextChanged(self)
            </OnTextChanged>
            <OnIMEBeginComposition>
                ZO_EditDefaultText_OnIMECompositionChanged(self)
            </OnIMEBeginComposition>
            <OnIMEEndComposition>
                ZO_EditDefaultText_OnIMECompositionChanged(self)
            </OnIMEEndComposition>
            <Controls>
                <Label name="$(parent)Text" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_DEFAULT_TEXT" font="MyFontGame16">
                    <Anchor point="TOPLEFT" offsetX="1"/>
                    <Anchor point="BOTTOMRIGHT"/>
                </Label>
            </Controls>
        </EditBox>

		<!-- Virtual Buttons -->
		<Button name="FCOGLButtonGuildSales" virtual="true">
			<Dimensions x="50" y="50" />
			<!--
			<Textures normal="/esoui/art/tradinghouse/tradinghouse_sell_tabicon_up.dds"
					  mouseOver="/esoui/art/tradinghouse/tradinghouse_sell_tabicon_over.dds"
					  pressed="/esoui/art/tradinghouse/tradinghouse_sell_tabicon_down.dds"
					  disabled="/esoui/art/tradinghouse/tradinghouse_sell_tabicon_disabled.dds"
			/>
			-->
			<Textures normal="/esoui/art/tradinghouse/tradinghouse_sell_tabicon_up.dds"
					  mouseOver="/esoui/art/tradinghouse/tradinghouse_sell_tabicon_up.dds"
					  pressed="/esoui/art/tradinghouse/tradinghouse_sell_tabicon_up.dds"
					  disabled="/esoui/art/tradinghouse/tradinghouse_sell_tabicon_disabled.dds"
			/>
			<OnClicked>
				FCOGL.UI.SetTab(FCOGL_TAB_GUILDSALESLOTTERY)
			</OnClicked>
			<OnMouseEnter>
				FCOGL.ShowTooltip(self, TOP, GetString(FCOGL_GUILD_SALES_LOTTERY))
			</OnMouseEnter>
			<OnMouseExit>
				FCOGL.HideTooltip()
			</OnMouseExit>
		</Button>
		<Button name="FCOGLButtonList" virtual="true">
			<Dimensions x="50" y="50" />
			<Textures normal="/esoui/art/journal/journal_tabicon_cadwell_up.dds"
					  mouseOver="/esoui/art/journal/journal_tabicon_cadwell_over.dds"
					  pressed="/esoui/art/journal/journal_tabicon_cadwell_down.dds" />
			<OnClicked>
				FCOGL.UI.SetTab(FCOGL_TAB_FCOGL)
			</OnClicked>
			<OnMouseEnter>
				FCOGL.ShowTooltip(self, TOP, "List")
			</OnMouseEnter>
			<OnMouseExit>
				FCOGL.HideTooltip()
			</OnMouseExit>
		</Button>
		<Button name="FCOGLButtonDiceHistory" virtual="true">
			<Dimensions x="50" y="50" />
			<Textures normal="/esoui/art/guild/tabicon_history_up.dds"
					  mouseOver="/esoui/art/guild/tabicon_history_over.dds"
					  pressed="/esoui/art/guild/tabicon_history_down.dds"
					  disabled="/esoui/art/guild/tabicon_history_disabled.dds"
			/>
			<OnClicked>
				FCOGL.UI.ToggleDiceRollHistory()
			</OnClicked>
			<OnMouseEnter>
				FCOGL.ShowTooltip(self, TOP, GetString(FCOGL_TOGGLE_DICE_ROLL_HISTORY))
			</OnMouseEnter>
			<OnMouseExit>
				FCOGL.HideTooltip()
			</OnMouseExit>
		</Button>
		<Button name="FCOGLButtonSettings" virtual="true">
			<Dimensions x="28" y="28" />
			<Textures normal="/esoui/art/chatwindow/chat_options_up.dds"
					  pressed="/esoui/art/chatwindow/chat_options_down.dds"
					  mouseOver="/esoui/art/chatwindow/chat_options_over.dds"
					  disabled="/esoui/art/chatwindow/chat_options_up.dds"/>
			<OnClicked>
				FCOGL.ShowLAMSettings()
			</OnClicked>
			<OnMouseEnter>
				FCOGL.ShowTooltip(self, TOP, GetString(FCOGL_SETTINGS))
			</OnMouseEnter>
			<OnMouseExit>
				FCOGL.HideTooltip()
			</OnMouseExit>
		</Button>
		<Button name="FCOGLButtonClose" virtual="true">
			<Dimensions x="20" y="20" />
			<Textures normal="/esoui/art/buttons/closebutton_up.dds"
					  pressed="/esoui/art/buttons/closebutton_down.dds"
					  mouseOver="/esoui/art/buttons/closebutton_mouseOver.dds"
					  disabled="/esoui/art/buttons/closebutton_disabled.dds" />
			<OnClicked>
				FCOGL.UI.Show(false)
			</OnClicked>
			<OnMouseEnter>
				FCOGL.ShowTooltip(self, TOP, GetString(FCOGL_CLOSE))
			</OnMouseEnter>
			<OnMouseExit>
				FCOGL.HideTooltip()
			</OnMouseExit>
		</Button>
		<Button name="FCOGLButtonReload" virtual="true">
			<Dimensions x="30" y="30" />
			<Textures normal="/esoui/art/help/help_tabicon_feedback_up.dds"
					  mouseOver="/esoui/art/help/help_tabicon_feedback_over.dds"
                      pressed="/esoui/art/help/help_tabicon_feedback_down.dds"
                      disabled="/esoui/art/hud/gamepad/gp_radialicon_trade_disabled.dds" />
			<OnClicked>
			</OnClicked>
			<OnMouseEnter>
				FCOGL.ShowTooltip(self, RIGHT, GetString(FCOGL_REFRESH))
			</OnMouseEnter>
			<OnMouseExit>
				FCOGL.HideTooltip()
			</OnMouseExit>
		</Button>
		<Button name="FCOGLButtonNewGuildSalesLottery" virtual="true">
			<Dimensions x="30" y="30" />
			<Textures normal="/esoui/art/buttons/large_rightarrow_up.dds"
					  mouseOver="/esoui/art/buttons/large_rightarrow_over.dds"
                      pressed="/esoui/art/buttons/large_rightarrow_down.dds"
					  disabled="/esoui/art/buttons/large_rightarrow_disabled.dds"/>
			<OnClicked>
				FCOGL.StartNewGuildSalesLottery(FCOGLFrameGuildsDrop.m_comboBox.m_selectedItemData.index, FCOGL_DEFAULT_GUILD_SELL_HISTORY_DAYS, false)
			</OnClicked>
			<OnMouseEnter>
				FCOGL.ShowTooltip(self, RIGHT, GetString(FCOGL_START_NEW_GUILD_SALES_LOTTERY))
			</OnMouseEnter>
			<OnMouseExit>
				FCOGL.HideTooltip()
			</OnMouseExit>
		</Button>
		<Button name="FCOGLButtonRollTheDice" virtual="true">
			<Dimensions x="30" y="30" />
			<Textures normal="/esoui/art/lfg/gamepad/gp_lfg_menuicon_random.dds"
					  mouseOver="/esoui/art/lfg/gamepad/gp_lfg_menuicon_random.dds"
                      pressed="/esoui/art/guild/guildheraldry_indexicon_background_disabled.dds"
					  disabled = "/esoui/art/loot/dice_disabled.dds" />
			<OnClicked>
				FCOGL.RollTheDiceCheck()
			</OnClicked>
			<OnMouseEnter>
				FCOGL.ShowTooltip(self, RIGHT, GetString(FCOGL_ROLL_THE_DICE))
			</OnMouseEnter>
			<OnMouseExit>
				FCOGL.HideTooltip()
			</OnMouseExit>
		</Button>

		<!-- Frame/Window - Standard UI with border -->
		<TopLevelControl name="FCOGLFrame" mouseEnabled="true" movable="true" clampedToScreen="true" hidden="true" > <!--inherits="ZO_RightPanelFootPrint"-->
			<Dimensions x="730" y="690" />
			<DimensionConstraints minX="400" minY="300" />
			<Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" offsetX="300" offsetY="-100"/>
			<OnMoveStop>
				FCOGL.UI.OnWindowMoveStop()
			</OnMoveStop>
			<Controls>
				<Backdrop name="$(parent)Search" tier="HIGH" inherits="ZO_SingleLineEditBackdrop_Keyboard">
					<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" offsetX="-38" offsetY="14" />
					<Dimensions x="200" />
					<Controls>
						<EditBox name="$(parent)Box" inherits="ZO_DefaultEditForBackdrop ZO_EditDefaultText"/>
					</Controls>
				</Backdrop>

				<Control name="$(parent)SearchDrop" resizeToFitDescendents="true" mouseEnabled="true">
					<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$(parent)Search" />
					<OnInitialized>
						ZO_ComboBox:New(self)
					</OnInitialized>
					<OnMouseUp>
						if button == MOUSE_BUTTON_INDEX_LEFT and upInside then
							ZO_ComboBox_DropdownClicked(self)
						end
					</OnMouseUp>
					<Controls>
						<Label name="$(parent)Anchor" inherits="FCOGLSearchLabel">
							<Anchor point="RIGHT" />
						</Label>
						<Label name="$(parent)ColonText" text=":" inherits="FCOGLSearchLabel">
							<Anchor point="RIGHT" relativeTo="$(parent)Anchor" relativePoint="LEFT" offsetX="-8" />
						</Label>
						<Label name="$(parent)SelectedItemText" inherits="FCOGLSearchLabel">
							<Anchor point="RIGHT" relativeTo="$(parent)ColonText" relativePoint="LEFT" offsetX="-1" />
						</Label>
						<Button name="$(parent)OpenDropdown" inherits="ZO_DropdownButton">
							<Dimensions x="16" y="16" />
							<Anchor point="RIGHT" relativeTo="$(parent)SelectedItemText" relativePoint="LEFT" offsetX="-3" />
							<OnClicked>
								ZO_ComboBox_DropdownClicked(self:GetParent())
							</OnClicked>
						</Button>
					</Controls>
				</Control>
				<Control name="$(parent)GuildsDrop" resizeToFitDescendents="true" mouseEnabled="true">
					<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$(parent)SearchDrop" offsetX="-20" />
					<OnInitialized>
						ZO_ComboBox:New(self)
					</OnInitialized>
					<OnMouseUp>
							if (button == MOUSE_BUTTON_INDEX_LEFT and upInside) then
								ZO_ComboBox_DropdownClicked(self)
							end
					</OnMouseUp>
                    <Controls>
                        <Label name="$(parent)Anchor" inherits="FCOGLSearchLabel">
                            <Anchor point="RIGHT" />
                        </Label>
                        <Label name="$(parent)ColonText" text="" inherits="FCOGLSearchLabel">
                            <Anchor point="RIGHT" relativeTo="$(parent)Anchor" relativePoint="LEFT" offsetX="-8" />
                        </Label>
                        <Label name="$(parent)SelectedItemText" inherits="FCOGLSearchLabel">
                            <Anchor point="RIGHT" relativeTo="$(parent)ColonText" relativePoint="LEFT" offsetX="-1" />
                        </Label>
                        <Button name="$(parent)OpenDropdown" inherits="ZO_DropdownButton">
                            <Dimensions x="16" y="16" />
                            <Anchor point="RIGHT" relativeTo="$(parent)SelectedItemText" relativePoint="LEFT" offsetX="-3" />
                            <OnClicked>
                                ZO_ComboBox_DropdownClicked(self:GetParent())
                            </OnClicked>
                        </Button>
                    </Controls>
				</Control>

				<!-- Sort headers -->
				<Control name="$(parent)Headers">
					<Anchor point="TOPLEFT" offsetX="30" offsetY="51" />
					<Anchor point="TOPRIGHT" offsetY="51" />
					<Dimensions y="32" />
					<Controls>
                        <Control name="$(parent)Rank" inherits="FCOGLSortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self, GetString(FCOGL_HEADER_RANK), "rank", ZO_SORT_ORDER_UP, TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
                            </OnInitialized>
                            <Anchor point="TOPLEFT" />
                            <Dimensions x="50" y="32" />
                        </Control>
                        <!--
						<Control name="$(parent)DateTime" inherits="FCOGLSortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self, GetString(FCOGL_HEADER_DATE), "timestamp", ZO_SORT_ORDER_UP, TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
                            </OnInitialized>
							<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)Rank" />
                            <Dimensions x="135" y="32" />
                        </Control>
                        -->
						<Control name="$(parent)Name" inherits="FCOGLSortHeader">
							<OnInitialized>
								ZO_SortHeader_Initialize(self, GetString(FCOGL_HEADER_NAME), "name", ZO_SORT_ORDER_UP, TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
							</OnInitialized>
							<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)Rank" />
							<Dimensions x="200" y="32" />
						</Control>
						<!--
						<Control name="$(parent)Item" inherits="FCOGLSortHeader">
							<OnInitialized>
								ZO_SortHeader_Initialize(self, GetString(FCOGL_HEADER_ITEM), "itemLink", ZO_SORT_ORDER_UP, TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
							</OnInitialized>
							<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)Name" />
							<Dimensions x="100" y="32" />
						</Control>
						-->
						<Control name="$(parent)Price" inherits="FCOGLSortHeader">
							<OnInitialized>
								ZO_SortHeader_Initialize(self, GetString(FCOGL_HEADER_PRICE), "price", ZO_SORT_ORDER_UP, TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
							</OnInitialized>
							<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)Name" />
							<Dimensions x="80" y="32" />
						</Control>
                        <Control name="$(parent)Tax" inherits="FCOGLSortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self, GetString(FCOGL_HEADER_TAX), "tax", ZO_SORT_ORDER_UP, TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
                            </OnInitialized>
                            <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)Price" />
                            <Dimensions x="80" y="32" />
                        </Control>
						<Control name="$(parent)Amount" inherits="FCOGLSortHeader">
							<OnInitialized>
								ZO_SortHeader_Initialize(self, GetString(FCOGL_HEADER_AMOUNT), "amount", ZO_SORT_ORDER_UP, TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
							</OnInitialized>
							<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)Tax" />
							<Dimensions x="150" y="32" />
						</Control>
                        <Control name="$(parent)Info" inherits="FCOGLSortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self, GetString(FCOGL_HEADER_INFO), "info", ZO_SORT_ORDER_UP, TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
                            </OnInitialized>
                            <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)Amount" />
							<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" relativeTo="$(parent)" offsetX="-16" />
                            <Dimensions x="100" y="32" />
                        </Control>
					</Controls>
				</Control>

				<Control name="$(parent)List" inherits="ZO_ScrollList">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Headers" relativePoint="BOTTOMLEFT" offsetY="3" />
					<Anchor point="BOTTOMRIGHT" offsetX="-35" offsetY="-32" />
				</Control>

				<Label name="$(parent)Counter" font="ZoFontGameSmall" horizontalAlignment="RIGHT" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_DISABLED">
					<Anchor point="TOPRIGHT" relativeTo="$(parent)List" relativePoint="BOTTOMRIGHT" offsetY="6" />
				</Label>

				<!-- Tab Buttons -->
				<Button name="$(parent)TabGuildSales" inherits="FCOGLButtonGuildSales">
					<Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT"
							offsetX="-190" offsetY="-50" />
				</Button>
				<Button name="$(parent)TabList" inherits="FCOGLButtonList" hidden="true">
					<Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT"
							offsetX="-140" offsetY="-50" />
				</Button>
				<Button name="$(parent)TabDiceRollHistory" inherits="FCOGLButtonDiceHistory" hidden="true">
					<Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT"
							offsetX="-90" offsetY="-50" />
				</Button>

				<!-- Small tab buttons at the top right -->
				<Button name="$(parent)TabSettings" inherits="FCOGLButtonSettings">
					<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT"
							offsetX="-30" offsetY="-2" />
				</Button>
				<Button name="$(parent)TabClose" inherits="FCOGLButtonClose">
					<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT"
							offsetX="-2"  offsetY="-2" />
				</Button>

				<!-- Normal buttons at the tabs, left side e.g -->
				<Button name="$(parent)RollTheDice" inherits="FCOGLButtonRollTheDice">
					<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT"
							offsetX="4"  offsetY="6" />
				</Button>
				<Backdrop name="$(parent)EditDiceSides" tier="HIGH" inherits="ZO_SingleLineEditBackdrop_Keyboard">
					<Anchor point="LEFT" relativeTo="$(parent)RollTheDice" relativePoint="RIGHT" offsetX="2" offsetY="0" />
					<Dimensions x="30" y="15" />
					<Controls>
						<EditBox name="$(parent)Box" inherits="FCOGLEditForBackdrop FCOGLEditDefaultText" maxInputCharacters="3">
								<OnTextChanged>
									FCOGL_UI_OnTextChanged(self, true, true, false)
								</OnTextChanged>
								<OnFocusLost>
									FCOGL_UI_OnTextChanged(self, true, true, true)
								</OnFocusLost>
							    <OnEnter>
									FCOGL_UI_OnTextChanged(self, true, true, true)
								</OnEnter>
								<OnUpArrow>
									FCOGL_UI_OnArrowKey(self, true, true, true)
								</OnUpArrow>
								<OnDownArrow>
									FCOGL_UI_OnArrowKey(self, true, true, false)
								</OnDownArrow>
								<OnMouseEnter>
									FCOGL.ShowTooltip(self, RIGHT, GetString(FCOGL_DICE_SIDES))
								</OnMouseEnter>
								<OnMouseExit>
									FCOGL.HideTooltip()
								</OnMouseExit>
						</EditBox>
					</Controls>
				</Backdrop>

				<Button name="$(parent)NewGuildSalesLottery" inherits="FCOGLButtonNewGuildSalesLottery">
					<Anchor point="TOPLEFT" relativeTo="$(parent)RollTheDice" relativePoint="TOPRIGHT"
							offsetX="40"  offsetY="0" />
				</Button>
				<Button name="$(parent)ReloadGuildSalesLottery" inherits="FCOGLButtonReload">
					<Anchor point="TOPLEFT" relativeTo="$(parent)NewGuildSalesLottery" relativePoint="TOPRIGHT"
							offsetX="10"  offsetY="0" />
				</Button>

				<!--Background -->
		    	<Backdrop name="$(parent)BG" alpha="1" inherits="FCOGL_WindowsBackdrop" centerColor="666666">
		    		<AnchorFill/>
				</Backdrop>
			</Controls>
		</TopLevelControl>

		<!-- FCOGLFrameDiceHistory -->
		<TopLevelControl name="FCOGLFrameDiceHistory" mouseEnabled="true" movable="false" clampedToScreen="true" hidden="true" > <!--inherits="ZO_RightPanelFootPrint"-->
			<Dimensions x="500" y="690" />
			<DimensionConstraints minX="500" minY="300" />
			<Anchor point="TOPLEFT" relativeTo="FCOGLFrame" relativePoint="TOPRIGHT" offsetX="0" offsetY="0"/>
			<Controls>
				<Backdrop name="$(parent)Search" tier="HIGH" inherits="ZO_SingleLineEditBackdrop_Keyboard">
					<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" offsetX="-38" offsetY="14" />
					<Dimensions x="150" />
					<Controls>
						<EditBox name="$(parent)Box" inherits="ZO_DefaultEditForBackdrop ZO_EditDefaultText"/>
					</Controls>
				</Backdrop>

				<Control name="$(parent)SearchDrop" resizeToFitDescendents="true" mouseEnabled="true">
					<Anchor point="RIGHT" relativePoint="LEFT" relativeTo="$(parent)Search" />
					<OnInitialized>
						ZO_ComboBox:New(self)
					</OnInitialized>
					<OnMouseUp>
						if button == MOUSE_BUTTON_INDEX_LEFT and upInside then
							ZO_ComboBox_DropdownClicked(self)
						end
					</OnMouseUp>
					<Controls>
						<Label name="$(parent)Anchor" inherits="FCOGLSearchLabel">
							<Anchor point="RIGHT" />
						</Label>
						<Label name="$(parent)ColonText" text=":" inherits="FCOGLSearchLabel">
							<Anchor point="RIGHT" relativeTo="$(parent)Anchor" relativePoint="LEFT" offsetX="-8" />
						</Label>
						<Label name="$(parent)SelectedItemText" inherits="FCOGLSearchLabel">
							<Anchor point="RIGHT" relativeTo="$(parent)ColonText" relativePoint="LEFT" offsetX="-1" />
						</Label>
						<Button name="$(parent)OpenDropdown" inherits="ZO_DropdownButton">
							<Dimensions x="16" y="16" />
							<Anchor point="RIGHT" relativeTo="$(parent)SelectedItemText" relativePoint="LEFT" offsetX="-3" />
							<OnClicked>
								ZO_ComboBox_DropdownClicked(self:GetParent())
							</OnClicked>
						</Button>
					</Controls>
				</Control>

				<!-- Sort headers -->
				<Control name="$(parent)Headers">
					<!--<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="30" offsetY="51" />-->
					<Anchor point="TOPLEFT" offsetX="30" offsetY="51" />
					<Dimensions y="32" />
					<Controls>
						<Control name="$(parent)No" inherits="FCOGLSortHeader">
							<OnInitialized>
								ZO_SortHeader_Initialize(self, GetString(FCOGL_HEADER_NO), "no", ZO_SORT_ORDER_UP, TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
							</OnInitialized>
							<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)" />
							<Dimensions x="30" y="32" />
						</Control>
						<Control name="$(parent)DateTime" inherits="FCOGLSortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self, GetString(FCOGL_HEADER_DATE), "timestamp", ZO_SORT_ORDER_UP, TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
                            </OnInitialized>
							<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)No" />
                            <Dimensions x="135" y="32" />
                        </Control>
						<Control name="$(parent)Name" inherits="FCOGLSortHeader">
							<OnInitialized>
								ZO_SortHeader_Initialize(self, GetString(FCOGL_HEADER_MEMBER_NAME), "name", ZO_SORT_ORDER_UP, TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
							</OnInitialized>
							<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)DateTime" />
							<Dimensions x="200" y="32" />
						</Control>
						<Control name="$(parent)Roll" inherits="FCOGLSortHeader">
							<OnInitialized>
								ZO_SortHeader_Initialize(self, GetString(FCOGL_HEADER_ROLL), "roll", ZO_SORT_ORDER_UP, TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
							</OnInitialized>
							<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)Name" />
							<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" relativeTo="$(parent)" offsetX="-16" />
							<Dimensions x="100" y="32" />
                        </Control>
					</Controls>
				</Control>

				<Control name="$(parent)List" inherits="ZO_ScrollList">
					<Anchor point="TOPLEFT" relativeTo="$(parent)Headers" relativePoint="BOTTOMLEFT" offsetY="3" />
					<Anchor point="BOTTOMRIGHT" offsetX="-35" offsetY="-32" />
				</Control>

				<Label name="$(parent)Counter" font="ZoFontGameSmall" horizontalAlignment="RIGHT" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_DISABLED">
					<Anchor point="TOPRIGHT" relativeTo="$(parent)List" relativePoint="BOTTOMRIGHT" offsetY="6" />
				</Label>

				<!--Background -->
		    	<Backdrop name="$(parent)BG" alpha="1" inherits="FCOGL_WindowsBackdrop" centerColor="666666">
		    		<AnchorFill/>
				</Backdrop>
			</Controls>
		</TopLevelControl>
	</Controls>
</GuiXml>
